<!DOCTYPE html>
<html lang="en">
    <head>
      {% block head %}
            <meta charset="utf-8">
            <title>{% block title %}Silex/Doctrine/Twig Scaffold Application{% endblock %}</title>
            <meta name="description" content="Silex/Doctrine/Twig Scaffold Application">
            <meta name="author" content="Eric Hutson <ehutson@silverpop.com>">

            <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
            <!--[if lt IE 9]>
                <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <![endif]-->

            <!-- Le styles -->
            <link href="{{ app.request.baseUrl }}/css/bootstrap/bootstrap.css" rel="stylesheet">
            <link href="{{ app.request.baseUrl }}/css/style.css" rel="stylesheet">
            
            <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>
      {% endblock %}
    </head>

    <body>

        <div class="topbar">
            <div class="fill">
                <div class="container">
                    <a class="brand" href="#">Project name</a>
                    <ul class="nav">
                        <li class="active"><a href="{{ app.request.baseUrl }}">Home</a></li>
                        <li><a href="{{ app.request.baseUrl }}/hello/Eric">Hello</a></li>
                        <li><a href="{{ app.request.baseUrl }}/users">Users</a></li>
                    
                    </ul>
                    <ul class="nav secondary-nav">
                    {% if app.auth.hasIdentity %}
                            <li class=""><a href="{{ app.request.baseUrl }}/logout">Logout</a></li>
                    {% else %}
                            <li class=""><a href="{{ app.request.baseUrl }}/login">Login</a></li>
                    {% endif %}
                    </ul>
                </div>
            </div>
        </div>

        <div class="container">
            {% block content %} {% endblock %}

            <footer>
                {% block footer %}
                    <p>&copy; Company 2012</p>
                {% endblock %}
            </footer>
        </div> <!-- /container -->
    </body>
</html>