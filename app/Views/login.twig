{% extends "layout.twig" %}

{% block title%}Login{% endblock %}

{% block content %}
<div>
    <h1>Login:</h1>
    
    {% if errors %}
        <div class="well">
            <ul class="unstyled">
                {% for error in errors %}
                    <li><span class="red">{{ error }}</span></li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    
    <form method="post">
        <div class="clearfix">
            <label for="username">Username:</label>
            <div class="input">
                <input id="username" name="username" type="text" class="xlarge" value="{{ username }}" />
            </div>
        </div>
        <div class="clearfix">
            <label for="password">Password:</label>
            <div class="input">
                <input id="password" name="password" type="password" class="xlarge" />
            </div>
        </div>
        <div class="actions">
            <input class="btn primary" type="submit" value="Login...">
            <button class="btn" type="reset">Cancel</button>
        </div>
    </form>
</div>
{% endblock %}