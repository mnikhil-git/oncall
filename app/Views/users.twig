{% extends "layout.twig" %}

{% block title%}Users{% endblock %}

{% block content %}
    <h1>Users:</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th><th>Username</th><th>First Name</th><th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            {% if users %}
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.username|e }}</td>
                        <td>{{ user.firstname|e }}</td>
                        <td>{{ user.lastname|e }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr><td colspan="3">No Users Found...</td></tr>
            {% endif %}
        </tbody>
        
    </table>
{% endblock %}